	journal = {The Journal of Physical Chemistry B},
	author = {Antila, Hanne S. and Kav, Batuhan and Miettinen, Markus S. and Martinez-Seara, Hector and Jungwirth, Pavel and Ollila, O. H. Samuli},
	month = jun,
	year = {2022},
	pages = {4169--4183},
	file = {PDF:/home/peptid/Zotero/storage/YYEWFP5C/Antila et al. - 2022 - Emerging Era of Biomolecular Membrane Simulations Automated Physically-Justified Force Field Develo.pdf:application/pdf},
}

