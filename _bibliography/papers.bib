	number = {10},
	urldate = {2025-06-18},
	journal = {Journal of Chemical Theory and Computation},
	author = {Antila, Hanne S. and Dixit, Sneha and Kav, Batuhan and Madsen, Jesper J. and Miettinen, Markus S. and Ollila, O. H. Samuli},
